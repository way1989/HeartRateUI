<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/history_item_bg"
    android:gravity="center_vertical"
    android:minHeight="@dimen/history_list_item_minHeight"
    android:orientation="horizontal"
    android:padding="@dimen/history_item_padding">


    <TextView
        android:id="@+id/tv_time_history_item"
        style="@style/HeartRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/history_item_time_text_size" />

    <TextView
        android:id="@+id/tv_rate_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/history_item_rate_text_size" />

    <TextView
        android:id="@+id/tv_unit_history_item"
        style="@style/HeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heartrate_unit"
        android:textSize="@dimen/history_item_unit_text_size" />
</LinearLayout>
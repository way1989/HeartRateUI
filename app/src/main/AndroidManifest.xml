<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sherchen.heartrate">

    <application
        android:name="com.sherchen.heartrate.HeartApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.DayNight.NoActionBar">

        <activity android:name="com.sherchen.heartrate.Measure">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.sherchen.heartrate.History" />

        <activity android:name="com.sherchen.heartrate.Test" />

    </application>

</manifest>
